<div class="container mt-3">
  <h1 class="mb-5 text-center">DANH SÁCH TÀI KHOẢN</h1>
  <div class="d-flex flex-row-reverse"> 
      <a href="addUser" class="btn btn-primary mb-3 glyphicon glyphicon-plus" tabindex="-1" role="button">Thêm người dùng</a>
  </div>
  
  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Username</th>
          <th scope="col">Full name</th>
          <th scope="col">Address</th>
          <th scope="col">Setting</th>
        </tr>
      </thead>
      <tbody>
          <% for(let i=0; i<data.row.length; i++){ %>
              <tr>
                <td scope="col"><%= i+1%></td>
                <td>
                    <%= data.row[i].username %>
                </td>
                <td>
                    <%= data.row[i].fullname %>
                </td>
                <td>
                    <%= data.row[i].address %>
                </td>
                <td>
                  <a href="/detail-user/<%= data.row[i].username %>">
                    <i class="fa-regular fa-eye" style="color: #74C0FC; cursor: pointer;margin: 0 5px;" aria-hidden="true"></i></a>
                  <a href="/edit-user/<%= data.row[i].username %>">
                    <i class="fa-regular fa-pen-to-square" style="color: #74C0FC; cursor: pointer;margin: 0 5px;"></i></a>
                  <i class="fa-solid fa-trash-can" style="color: #f60909; cursor: pointer;margin: 0 5px;"></i>
                  
                </td>
              </tr>   
          <% }%>
      </tbody>
  </table>
   


</div>